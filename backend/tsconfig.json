{
  "compilerOptions": {
    "rootDir": "",
    "moduleResolution": "node",
    "outDir": "./dist",
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "jest"]
  },
  "include": ["./apis", "./tests"],
  "exclude": ["node_modules"]
}
